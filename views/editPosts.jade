extends admin

block content 
    
    
    h2.page-header View / Edit Posts

    if posts
       table#mytable.table.table-bordred.table-striped
        thead
            th Image
            th Title
            th body
            th Date
            th Edit
            th Delete
        tbody
        each post, i in posts
            tr
            td 
                img(class="img-thumbnail", width="150", src='/images/#{post.mainimage}')
            td #{post.title}
            td 
                !=truncateText(post.body, 75)
            td #{moment(post.date).format("MM-DD-YYYY")}
            td
                p(data-placement='top', data-toggle='tooltip', title='Edit')
                button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
                    span.glyphicon.glyphicon-pencil
            td
                p(data-placement='top', data-toggle='tooltip', title='Delete')
                button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', data-target='#delete')
                    span.glyphicon.glyphicon-trash
            tr
            