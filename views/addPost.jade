extends admin

block content 
    
    
    h2.page-header AddPost

    form(method='post', action="/admin/addPost", enctype='.......')
        .form-group
            label Title
            input.form-control(name='title', type='text', placeholder='title')
            if errors
                each error, i in errors
                    if(error.param == 'title')
                        p.alert.alert-danger #{error.msg}
        
        .form-group
            label Category
            select 

        .form-group
            label Body
            textarea.form-control(name='body', rows='5' placeholder='story')
            if errors
                each error, i in errors
                    if(error.param == 'body')
                        p.alert.alert-danger #{error.msg}

        .form-group
            label Date
            input.form-control(name='date', type='date')
            if errors
                each error, i in errors
                    if(error.param == 'date')
                        p.alert.alert-danger #{error.msg}
        .form-group
            label Image
            input.form-control(name='image', type='file')
            if errors
                each error, i in errors
                    if(error.param == 'image')
                        p.alert.alert-danger #{error.msg}

        input.btn.btn-primary(type='submit', name='submit', value='Add Post')