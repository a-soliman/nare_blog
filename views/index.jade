extends layout

block content
  h1 Mambers Area
  p Welcome to my Blog

  if posts
    each post, i in posts
      .post
        h1
          a(href='/posts/post/#{post._id}')
            =post.title
        p.meta Posted in 
          a(href='/posts/show/#{post.category}') #{post.category}
          | , on #{moment(post.date).format("MM-DD-YYYY")}
        img(src='/images/#{post.mainimage}')
        p.body 
          !=truncateText(post.body, 500)
        a.more(href='/posts/post/#{post._id}') Read More