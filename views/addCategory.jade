extends admin

block content 
    
    
    h2.page-header Add Category

    form(method='post', action='/admin/addCategory')
        .form-group
            label Category Name
            input.form-control(name='name', type='text', placeholder='Wedding')
            if errors
                each error, i in errors
                    if(error.param == 'name')
                        p.alert.alert-danger #{error.msg}

        input.btn.btn-primary(type='submit', name='submit', value='Add Category')